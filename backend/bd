const mysql = require('mysql2/promise'); // versi√≥n promise para async/await mejor manejo

const pool = mysql.createPool({
  host: 'localhost',
  user: 'root',
  password: '',
  database: 'tienda_instrumentos',
  waitForConnections: true,
  connectionLimit: 10,
  queueLimit: 0
});

module.exports = { pool };